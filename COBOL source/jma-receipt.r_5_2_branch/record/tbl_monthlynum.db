tbl_monthlynum {
	HOSPNUM				number(2,0);
	PTID 				number(10);
	KOHNUM				char(3);
	KOHID				number(10);
	SRYYM  				char(6);
	NYUGAIKBN			char(1);
	JKYSNUM 			char(20);
	KOFUNUM 			char(15);
	TERMID   			varchar(32);
	OPID				varchar(16);
	CREYMD   			char(8);
	UPYMD				char(8);
	UPHMS				char(6);
#-----> 検索用項目
	XXFTNJANUM			char(8),virtual;
	XXTEKSTYMD			char(8),virtual;
	XXTEKEDYMD			char(8),virtual;

};

primary	{
	HOSPNUM,PTID,KOHNUM,KOHID,SRYYM,NYUGAIKBN;
};

path	key 	{
	DBSELECT	{
		DECLARE tbl_monthlynum_key_csr CURSOR FOR
		SELECT *
		FROM tbl_monthlynum
			WHERE   HOSPNUM    =   :HOSPNUM
			AND   PTID        =   :PTID
			AND   KOHNUM      =   :KOHNUM
			AND   SRYYM       =   :SRYYM
			AND  NYUGAIKBN    =   :NYUGAIKBN
                        
		;
	};
};

