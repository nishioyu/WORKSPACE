path	key6 	{
	DBSELECT	{
		DECLARE tbl_monthlynum_key6_csr CURSOR FOR
		SELECT HOSPNUM,PTID
		FROM tbl_monthlynum
			WHERE	HOSPNUM		=	:HOSPNUM
			AND		JKYSNUM		=	:JKYSNUM
			AND		SRYYM		=	:SRYYM
			AND		(HOSPNUM,PTID)	in
						(SELECT HOSPNUM,PTID
							FROM	tbl_ptkohinf
							WHERE	HOSPNUM		=	:HOSPNUM
							AND		FTNJANUM	=	:XXFTNJANUM
							AND		JKYSNUM		<>	:JKYSNUM
							AND		TEKSTYMD	<=	:XXTEKSTYMD
							AND		TEKEDYMD	>=	:XXTEKEDYMD
							AND		SAKJOKBN	<>	'1')
							GROUP	BY	HOSPNUM,PTID
		;
	};
};

path	key7 	{
