		FROM tbl_monthlynum
			WHERE   HOSPNUM    =   :HOSPNUM
			AND   PTID        =   :PTID
			AND   KOHID       =   :KOHID
			ORDER   BY  SRYYM    DESC,
					    NYUGAIKBN DESC
		;
	};
};

